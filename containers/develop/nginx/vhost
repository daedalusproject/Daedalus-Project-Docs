server {
    listen 80 default_server;
    root /var/www/daedalus-project-docs;
    location /{
        index index.html;
        location ~* \.(?:json)$ {
            expires 8h;
            add_header Pragma public;
            add_header Cache-Control "public";
        }
        location ~* \.(?:ico|css|js)$ {
            expires 7d;
            add_header Pragma public;
            add_header Cache-Control "public";
        }
        location ~* \.(?:gif|jpe?g|png|woff2)$ {
            expires 30d;
            add_header Pragma public;
            add_header Cache-Control "public";
        }
        location / {
            include links.conf;
        }
    }
}
